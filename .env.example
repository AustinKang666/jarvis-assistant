# OpenAI API 金鑰
OPENAI_API_KEY = your-key-here
# OpenAI模型設定
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# RAG 設定
KNOWLEDGE_BASE_DIR=data/knowledge_base
VECTOR_STORE_PATH=data/vector_store
EMBEDDING_CHUNK_SIZE=1000
EMBEDDING_CHUNK_OVERLAP=200

# 回應快取設定
RESPONSE_CACHE_FILE=data/cache/response_cache.json
RESPONSE_CACHE_MAX_SIZE=100
RESPONSE_CACHE_SIMILARITY_THRESHOLD=0.85

# 網路搜索 API 金鑰
SERPAPI_KEY = your-key-here

# 安全過濾設定
SAFETY_FILTER_ENABLED=True
SAFETY_FILTER_LEVEL=medium

# 語音服務設定
ELEVENLABS_API_KEY = your-key-here
ELEVENLABS_VOICE_ID = your-ID-here

# 視覺模型設定
VISION_ENABLED=True
VISION_MODEL=gpt-4o-mini
VISION_MAX_IMAGE_SIZE= 4 * 1024 * 1024 # 4MB

# 股票分析設定
STOCK_ANALYSIS_ENABLED=True
